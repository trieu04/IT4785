<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="100"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioButton
        android:id="@+id/rbEven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số lẻ"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/etNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rbPrime"
        android:layout_marginTop="16dp" />

    <RadioButton
        android:id="@+id/rbPrime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số nguyên tố"
        app:layout_constraintTop_toTopOf="@id/rbEven"
        app:layout_constraintStart_toEndOf="@id/rbEven"
        app:layout_constraintEnd_toStartOf="@id/rbPerfect" />

    <RadioButton
        android:id="@+id/rbPerfect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số hoàn hảo"
        app:layout_constraintTop_toTopOf="@id/rbEven"
        app:layout_constraintStart_toEndOf="@id/rbPrime"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioButton
        android:id="@+id/rbOdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số chẵn"
        app:layout_constraintTop_toBottomOf="@id/rbEven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rbSquare"
        android:layout_marginTop="8dp" />

    <RadioButton
        android:id="@+id/rbSquare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số chính phương"
        app:layout_constraintTop_toTopOf="@id/rbOdd"
        app:layout_constraintStart_toEndOf="@id/rbOdd"
        app:layout_constraintEnd_toStartOf="@id/rbFibonacci" />

    <RadioButton
        android:id="@+id/rbFibonacci"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Số Fibonacci"
        app:layout_constraintTop_toTopOf="@id/rbOdd"
        app:layout_constraintStart_toEndOf="@id/rbSquare"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/etNumber"
        app:layout_constraintBottom_toBottomOf="@id/rbOdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvNoResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Không có số nào thỏa mãn"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rbOdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/lvNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/rbOdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
